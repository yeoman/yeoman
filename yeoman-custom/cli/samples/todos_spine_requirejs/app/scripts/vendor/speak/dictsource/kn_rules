
// This file is UTF8 encoded 
// Spelling to phoneme rules for Kannada

// A means vowel letters (not vowel signs)
// B means a combining vowel sign or a virama


.replace
೦	0	// Convert Kannada numbers
೧	1
೨	2
೩	3
೪	4
೫	5
೬	6
೭	7
೮	8
೯	9


.group ಕ
	ಕ	ka
	ಕ (B	k

.group ಖ
	ಖ	kha
	ಖ (B	kh

.group ಗ
	ಗ	ga
	ಗ (B	g

.group ಘ
	ಘ	gha
	ಘ (B	gh

.group ಙ
	ಙ	Na
	ಙ (B	N

.group ಚ
	ಚ	ca
	ಚ (B	c

.group ಛ
	ಛ	cha
	ಛ (B	ch

.group ಜ
	ಜ	Ja
	ಜ (B	J

.group ಝ
	ಝ	Jha
	ಝ (B	Jh

.group ಞ
	ಞ	n^a
	ಞ (B	n^

.group ಟ
	ಟ	t.a
	ಟ (B	t.

.group ಠ
	ಠ	th.a
	ಠ (B	th.

.group ಡ
	ಡ	d.a
	ಡ (B	d.

.group ಢ
	ಢ	dh.a
	ಢ (B	dh.

.group ಣ
	ಣ	n.a
	ಣ (B	n.

.group ತ
	ತ	ta
	ತ (B	t

